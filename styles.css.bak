:root {
    /* Цветовая палитра */
    --primary-color: #1a1a1a;
    --primary-dark: #000000;
    --primary-light: #4a4a4a;
    --accent-color: #c9a961;
    --accent-hover: #b08d45;
    
    --text-dark: #1a1a1a;
    --text-medium: #4a4a4a;
    --text-light: #7a7a7a;
    --text-white: #ffffff;
    
    --bg-white: #ffffff;
    --bg-light: #f5f5f5;
    --bg-dark: #1a1a1a;
    --bg-gray: #e8e8e8;
    
    --border-color: #d0d0d0;
    --shadow-sm: 0 2px 12px rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 24px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 8px 40px rgba(0, 0, 0, 0.15);
    
    /* Градиенты */
    --gradient-primary: linear-gradient(135deg, #1a1a1a 0%, #4a4a4a 100%);
    --gradient-accent: linear-gradient(135deg, #c9a961 0%, #d4b574 100%);
    --gradient-hero: linear-gradient(135deg, rgba(26, 26, 26, 0.85) 0%, rgba(74, 74, 74, 0.75) 100%);
    
    /* Типографика */
    --font-primary: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-display: 'Playfair Display', Georgia, serif;
    
    /* Размеры */
    --container-width: 1200px;
    --border-radius: 0;
    --border-radius-sm: 0;
    --border-radius-lg: 0;
    
    /* Transitions */
    --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-primary);
    color: var(--text-dark);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 20px;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
}

.section-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--text-dark);
}

.section-subtitle {
    text-align: center;
    font-size: 1.125rem;
    color: var(--text-medium);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

/* Buttons */
.cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background: var(--gradient-accent);
    color: var(--text-dark);
    border: none;
    border-radius: var(--border-radius-sm);
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
    box-shadow: var(--shadow-sm);
}

.cta-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.cta-button.large {
    padding: 18px 48px;
    font-size: 1.125rem;
}

.cta-button.white {
    background: white;
    color: var(--primary-color);
}

.cta-button.full-width {
    width: 100%;
}

/* Top Bar */
.top-bar {
    background: var(--primary-dark);
    color: white;
    padding: 10px 0;
}

.top-bar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.contact-info {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.phone-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
}

.phone-link:hover {
    color: var(--accent-color);
}

.work-time {
    font-size: 0.875rem;
    opacity: 0.8;
}

/* Header */
.header {
    background: white;
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 1rem 0;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
}

.logo {
    display: flex;
    flex-direction: column;
    gap: 0;
    font-family: var(--font-display);
    color: var(--primary-color);
}

.logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.5px;
}

.logo-subtitle {
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--accent-color);
}

.logo-icon {
    font-size: 2rem;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
}

.nav-menu a {
    color: var(--text-dark);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
}

.nav-menu a:hover {
    color: var(--primary-color);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
}

.mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 2px;
    transition: var(--transition);
}

/* Hero Section */
.hero {
    background: linear-gradient(to right, rgba(0,0,0,0.7), rgba(0,0,0,0.3)), 
                url('https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=1600&h=900&fit=crop') center/cover;
    color: white;
    padding: 120px 0 80px;
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%);
    z-index: 0;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
}

.hero-title {
    font-family: var(--font-display);
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
}

.hero-label {
    font-size: 0.875rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-weight: 300;
}

.gradient-text {
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.95;
    line-height: 1.6;
}

.hero-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
}

.hero-feature {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1.125rem;
}

.check-icon {
    width: 24px;
    height: 24px;
    background: var(--accent-color);
    color: var(--text-dark);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
}

.hero-cta {
    margin-top: 2rem;
}

.cta-note {
    margin-top: 1rem;
    font-size: 0.875rem;
    opacity: 0.8;
}

.hero-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Expert Photo */
.expert-photo {
    position: relative;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
}

.expert-img {
    width: 100%;
    height: auto;
    display: block;
    filter: grayscale(20%);
    transition: var(--transition);
}

.expert-img:hover {
    filter: grayscale(0%);
}

.expert-badge {
    position: absolute;
    bottom: 30px;
    left: 30px;
    background: rgba(201, 169, 97, 0.95);
    color: white;
    padding: 1.5rem 2rem;
    backdrop-filter: blur(10px);
}

.badge-label {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
}

.badge-text {
    font-size: 0.875rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    opacity: 0.9;
}

.stat-card {
    background: white;
    color: var(--text-dark);
    padding: 2rem;
    border-radius: var(--border-radius);
    margin-bottom: 1rem;
    text-align: center;
}

.stat-card:last-child {
    margin-bottom: 0;
}

.stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 1rem;
    color: var(--text-medium);
}

.scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    opacity: 0.7;
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-10px); }
}

/* About Section */
.about-section {
    padding: 80px 0;
    background: var(--bg-white);
}

/* Expert Section */
.expert-section {
    padding: 100px 0;
    background: var(--bg-light);
}

.expert-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
}

.expert-image-block {
    position: relative;
}

.expert-main-photo {
    width: 100%;
    height: auto;
    display: block;
    filter: grayscale(30%);
    transition: var(--transition);
}

.expert-main-photo:hover {
    filter: grayscale(0%);
}

.expert-quote {
    position: absolute;
    bottom: -30px;
    right: -30px;
    background: white;
    padding: 2rem;
    max-width: 350px;
    box-shadow: var(--shadow-lg);
    border-left: 3px solid var(--accent-color);
}

.expert-quote p {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: var(--text-dark);
}

.expert-quote span {
    font-size: 0.875rem;
    color: var(--text-medium);
    letter-spacing: 1px;
}

.expert-bio {
    padding: 2rem 0;
}

.bio-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-medium);
    margin-bottom: 1.5rem;
}

.bio-text strong {
    color: var(--text-dark);
    font-weight: 600;
}

.credentials {
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.credential-item {
    display: flex;
    gap: 1.5rem;
    align-items: start;
}

.credential-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
}

.credential-item h4 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
}

.credential-item p {
    color: var(--text-medium);
    line-height: 1.6;
}

.about-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.about-card {
    text-align: center;
    padding: 2.5rem 2rem;
    background: white;
    transition: var(--transition);
    border: 1px solid var(--border-color);
}

.about-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-color);
}

.about-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.about-card h3 {
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.about-card p {
    color: var(--text-medium);
    line-height: 1.6;
}

/* Problems Section */
.problems-section {
    padding: 80px 0;
    background: white;
}

.problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.problem-card {
    background: var(--bg-light);
    padding: 2.5rem 2rem;
    position: relative;
    overflow: hidden;
    border-left: 3px solid var(--accent-color);
    transition: var(--transition);
}

.problem-card:hover {
    background: white;
    box-shadow: var(--shadow-md);
}

.problem-number {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 3rem;
    font-weight: 700;
    color: var(--accent-color);
    opacity: 0.15;
}

.problem-card h3 {
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.problem-card p {
    color: var(--text-medium);
}

/* Benefits Section */
.benefits-section {
    padding: 80px 0;
    background: white;
}

.benefits-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.benefit-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2.5rem 2rem;
    background: white;
    transition: var(--transition);
    border: 1px solid var(--border-color);
}

.benefit-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-color);
}

.benefit-icon {
    width: 80px;
    height: 80px;
    background: var(--bg-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: var(--transition);
}

.benefit-item:hover .benefit-icon {
    background: var(--accent-color);
}

.benefit-icon svg {
    stroke: white;
}

.benefit-item h3 {
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.benefit-item p {
    color: var(--text-medium);
}

/* Program Section */
.program-section {
    padding: 80px 0;
    background: var(--bg-light);
}

.timeline {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 40px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--primary-light);
}

.timeline-item {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
    position: relative;
}

.timeline-marker {
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
    flex-shrink: 0;
    box-shadow: var(--shadow-md);
    z-index: 1;
}

.timeline-content {
    background: white;
    padding: 2rem;
    border-radius: var(--border-radius);
    flex: 1;
    box-shadow: var(--shadow-sm);
}

.timeline-content h3 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.timeline-content p {
    color: var(--text-medium);
    margin-bottom: 1rem;
}

.timeline-duration {
    display: inline-block;
    background: var(--accent-color);
    color: var(--text-dark);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

/* Results Section */
.results-section {
    padding: 80px 0;
    background: white;
}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.result-card {
    text-align: center;
    padding: 2rem;
    background: var(--bg-light);
    border-radius: var(--border-radius);
}

.result-stat {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.result-label {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-dark);
}

.result-card p {
    color: var(--text-medium);
    font-size: 0.875rem;
}

.cta-banner {
    background: var(--gradient-primary);
    color: white;
    padding: 4rem 2rem;
    border-radius: var(--border-radius-lg);
    text-align: center;
}

.cta-banner h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
}

.cta-banner p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

/* Reviews Section */
.reviews-section {
    padding: 80px 0;
    background: var(--bg-light);
}

.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.review-card {
    background: white;
    padding: 2.5rem;
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
    border-left: 3px solid var(--accent-color);
    transition: var(--transition);
    min-height: 400px;
}

.review-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-5px);
}

.review-rating {
    color: var(--accent-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.review-text {
    color: var(--text-medium);
    line-height: 1.8;
    margin-bottom: 2rem;
    flex: 1;
    font-style: italic;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 8;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}

.review-author {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.author-avatar {
    width: 50px;
    height: 50px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
}

.author-name {
    font-weight: 600;
    color: var(--text-dark);
}

.author-age {
    font-size: 0.875rem;
    color: var(--text-light);
}

/* Contact Section */
.contact-section {
    padding: 80px 0;
    background: white;
}

.contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
}

.contact-info-block h2 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
}

.contact-description {
    color: var(--text-medium);
    margin-bottom: 2rem;
    line-height: 1.8;
}

.contact-benefits {
    margin-bottom: 2rem;
}

.contact-benefit {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 1rem;
    font-size: 1.125rem;
}

.benefit-check {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 1.5rem;
}

.contact-direct {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.contact-or {
    color: var(--text-medium);
    margin-bottom: 1rem;
}

.contact-phone {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition);
}

.contact-phone:hover {
    color: var(--primary-light);
}

.contact-form-block {
    background: var(--bg-light);
    padding: 3rem;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group label {
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-dark);
}

.form-group input,
.form-group select,
.form-group textarea {
    padding: 14px 16px;
    border: 2px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
}

.form-consent {
    font-size: 0.875rem;
}

.checkbox-label {
    display: flex;
    align-items: start;
    gap: 8px;
    cursor: pointer;
}

.checkbox-label input {
    margin-top: 4px;
    cursor: pointer;
}

.checkbox-label a {
    color: var(--primary-color);
    text-decoration: underline;
}

.form-note {
    text-align: center;
    color: var(--text-medium);
    font-size: 0.875rem;
    margin-top: -0.5rem;
}

/* Footer */
.footer {
    background: var(--bg-dark);
    color: white;
    padding: 4rem 0 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.footer-description {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
}

.footer-column h4 {
    margin-bottom: 1rem;
    color: var(--accent-color);
}

.footer-links,
.footer-contacts {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-links a,
.footer-contacts a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: var(--transition);
}

.footer-links a:hover,
.footer-contacts a:hover {
    color: var(--accent-color);
}

.footer-contacts li {
    color: rgba(255, 255, 255, 0.8);
}

.footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
}

.footer-disclaimer {
    margin-top: 0.5rem;
}

/* Floating Call Button */
.floating-call-button {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: var(--gradient-accent);
    color: var(--text-dark);
    padding: 16px 24px;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    font-weight: 700;
    box-shadow: var(--shadow-lg);
    z-index: 999;
    transition: var(--transition);
}

.floating-call-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
}

/* Privacy Modal */
.privacy-modal {
    display: none;
    position: fixed;
    z-index: 10001;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.8);
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.privacy-modal-content {
    background-color: white;
    max-width: 700px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.3s ease;
}

.privacy-modal-close {
    position: absolute;
    top: 15px;
    right: 20px;
    color: var(--text-medium);
    font-size: 35px;
    font-weight: 300;
    cursor: pointer;
    transition: var(--transition);
    z-index: 1;
}

.privacy-modal-close:hover {
    color: var(--text-dark);
}

.privacy-modal-content h2 {
    background: var(--bg-dark);
    color: white;
    padding: 2rem 2.5rem;
    margin: 0;
    font-size: 1.5rem;
    border-left: 4px solid var(--accent-color);
}

.privacy-modal-body {
    padding: 2.5rem;
    line-height: 1.8;
}

.privacy-modal-body h3 {
    color: var(--primary-color);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
}

.privacy-modal-body ul {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
}

.privacy-modal-body li {
    margin-bottom: 0.5rem;
    color: var(--text-medium);
}

.privacy-modal-body p {
    margin-bottom: 1rem;
    color: var(--text-medium);
}

.privacy-note {
    background: var(--bg-light);
    padding: 1rem;
    border-left: 3px solid var(--accent-color);
    margin-top: 1.5rem;
    font-size: 0.9rem;
}

.privacy-note a {
    color: var(--primary-color);
    text-decoration: underline;
}

.privacy-modal-actions {
    padding: 1.5rem 2.5rem 2.5rem;
    display: flex;
    gap: 1rem;
    border-top: 1px solid var(--border-color);
}

.privacy-modal-actions button {
    flex: 1;
}

.privacy-modal-actions .secondary {
    background: white;
    color: var(--text-dark);
    border: 2px solid var(--border-color);
}

.privacy-modal-actions .secondary:hover {
    background: var(--bg-light);
    border-color: var(--text-medium);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .hero-content {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .hero-title {
        font-size: 2.5rem;
    }
    
    .expert-content {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .expert-quote {
        position: static;
        margin-top: 2rem;
        max-width: 100%;
    }
    
    .contact-wrapper {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .footer-content {
        grid-template-columns: 1fr 1fr;
    }
}

@media (max-width: 768px) {
    .privacy-modal {
        padding: 10px;
    }
    
    .privacy-modal-content {
        max-height: 95vh;
    }
    
    .privacy-modal-content h2 {
        padding: 1.5rem;
        font-size: 1.25rem;
    }
    
    .privacy-modal-body {
        padding: 1.5rem;
    }
    
    .privacy-modal-actions {
        flex-direction: column;
        padding: 1rem 1.5rem 1.5rem;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .nav-menu {
        display: none;
    }
    
    .mobile-menu-toggle {
        display: flex;
    }
    
    .header-cta {
        display: none;
    }
    
    .hero {
        padding: 60px 0 40px;
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-subtitle {
        font-size: 1rem;
    }
    
    .timeline::before {
        left: 30px;
    }
    
    .timeline-marker {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }
    
    .timeline-item {
        gap: 1rem;
    }
    
    .footer-content {
        grid-template-columns: 1fr;
    }
    
    .contact-form-block {
        padding: 2rem;
    }
    
    .floating-call-button span {
        display: none;
    }
    
    .floating-call-button {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        padding: 0;
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 1.75rem;
    }
    
    .section-title {
        font-size: 1.75rem;
    }
    
    .cta-button.large {
        padding: 14px 32px;
        font-size: 1rem;
    }
    
    .result-stat {
        font-size: 2.5rem;
    }
}